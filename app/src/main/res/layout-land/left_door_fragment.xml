<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.canyouescape.fragment.LeftDoorFragment">

    <RelativeLayout
        android:id="@+id/LDLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/door_left"
        >

        <ImageView
            android:id="@+id/codeLock"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:background="@drawable/codelock"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="110dp"
            />

        <ImageView
            android:id="@+id/doorL"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#1bb6ff"
            android:gravity="center_vertical|center_horizontal"/>

    </RelativeLayout>


</FrameLayout>
