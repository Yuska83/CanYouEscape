<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.roomescape.fragment.LeftDoorFragment">

    <RelativeLayout
        android:id="@+id/LDLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/door_left">

        <ImageView
            android:id="@+id/codeLock"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/codelock"
            android:layout_alignTop="@+id/doorL"
            android:layout_toLeftOf="@+id/doorL"
            android:layout_toStartOf="@+id/doorL"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="28dp" />

        <ImageView
            android:id="@+id/doorL"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/message"
            style="@style/MyMessageStyle"
            android:textAlignment="center" />
    </RelativeLayout>


</FrameLayout>
