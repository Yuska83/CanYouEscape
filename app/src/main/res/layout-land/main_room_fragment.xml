<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.canyouescape.fragment.MainRoomFragment">

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:background="@drawable/room_main1">

        <ImageView
            android:id="@+id/mainDoor"
            android:layout_width="80dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:background="@drawable/codelock2" />

        <ImageView
            android:id="@+id/leftDoor"
            android:layout_width="95dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp" />


        <ImageView
            android:id="@+id/rightDoor"
            android:layout_width="95dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp" />


        <ImageView
            android:id="@+id/MonaLiza"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/mona_liza" />


        <ImageView
            android:id="@+id/table"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="140dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/table" />

        <ImageView
            android:id="@+id/table2"
            android:layout_width="35dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="180dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/table"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/hatchSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="180dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/hatch" />

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:textColor="#1bb6ff"
            android:textSize="20dp" />

    </RelativeLayout>
</FrameLayout>
