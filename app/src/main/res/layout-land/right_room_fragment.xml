<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.roomescape.fragment.RightRoomFragment">

    <RelativeLayout
        android:id="@+id/room3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/room_right">

        <ImageView
            android:id="@+id/safeDoor"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/safe" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/picture"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/picture2"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="470dp"
            android:background="@drawable/picture2"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/door2"
            android:layout_width="140dp"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp" />

        <TextView
            android:id="@+id/message"
            style="@style/MyMessageStyle"
            android:textAlignment="center" />
    </RelativeLayout>

</FrameLayout>
