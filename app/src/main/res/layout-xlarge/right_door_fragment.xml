<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.roomescape.fragment.RightDoorFragment">

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        >

        <ImageView
            android:id="@+id/doorR"
            android:layout_width="300dp"
            android:layout_height="1000dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/tumbler"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="278dp"
            android:background="@drawable/tumdler"
            android:layout_alignTop="@+id/doorR"
            android:layout_toRightOf="@+id/doorR"
            android:layout_toEndOf="@+id/doorR"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/message"
            style="@style/MyMessageStyleXLarge"
            android:textAlignment="center" />
    </RelativeLayout>


</FrameLayout>
