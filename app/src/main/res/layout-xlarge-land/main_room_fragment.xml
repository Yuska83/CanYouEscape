<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.roomescape.fragment.MainRoomFragment">

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:background="@drawable/room_main1">

        <ImageView
            android:id="@+id/mainDoor"
            android:layout_width="180dp"
            android:layout_height="355dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/codelock2" />

        <ImageView
            android:id="@+id/leftDoor"
            android:layout_width="150dp"
            android:layout_height="500dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp" />


        <ImageView
            android:id="@+id/rightDoor"
            android:layout_width="150dp"
            android:layout_height="500dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp" />


        <ImageView
            android:id="@+id/MonaLiza"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/mona_liza" />


        <ImageView
            android:id="@+id/table"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="300dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/table" />

        <ImageView
            android:id="@+id/table2"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="350dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/table"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/hatchSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="370dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/hatch" />

        <TextView
            android:id="@+id/message"
            style="@style/MyMessageStyleXLarge"
            android:textAlignment="center" />
    </RelativeLayout>

</FrameLayout>
