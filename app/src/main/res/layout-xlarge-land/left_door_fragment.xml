<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.roomescape.fragment.LeftDoorFragment">

    <RelativeLayout
        android:id="@+id/LDLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/door_left">

        <ImageView
            android:id="@+id/codeLock"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/codelock" />

        <ImageView
            android:id="@+id/doorL"
            android:layout_width="400dp"
            android:layout_height="700dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/message"
            style="@style/MyMessageStyleXLarge"
            android:textAlignment="center" />
    </RelativeLayout>


</FrameLayout>
