<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.canyouescape.fragment.CombinationLockFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/codelock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#3c4040"
            android:columnCount="3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_columnSpan="3"
                android:layout_margin="10dp"
                android:background="#c5f3f3"
                android:maxLength="10"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="#193cff"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button7"
                style="@style/MyButton"
                android:layout_marginLeft="10dp"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/MyButton"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/MyButton"
                android:layout_marginRight="10dp"
                android:text="9" />

            <Button
                android:id="@+id/button4"
                style="@style/MyButton"
                android:layout_marginLeft="10dp"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/MyButton"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/MyButton"
                android:layout_marginRight="10dp"
                android:text="6" />

            <Button
                android:id="@+id/button1"
                style="@style/MyButton"
                android:layout_marginLeft="10dp"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/MyButton"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/MyButton"
                android:layout_marginRight="10dp"
                android:text="3" />

            <Button
                android:id="@+id/btnEnter"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Enter"
                android:textColor="#20f2ee" />

        </GridLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:textColor="#1bb6ff"
            android:textSize="20dp" />
    </RelativeLayout>


</FrameLayout>
