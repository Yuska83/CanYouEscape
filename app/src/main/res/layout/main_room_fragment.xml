<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.yuliya.canyouescape.fragment.MainRoomFragment">

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/room_main1">

        <ImageView
            android:id="@+id/mainDoor"
            android:layout_width="65dp"
            android:layout_height="215dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/codelock2" />

        <ImageView
            android:id="@+id/leftDoor"
            android:layout_width="75dp"
            android:layout_height="350dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:id="@+id/rightDoor"
            android:layout_width="75dp"
            android:layout_height="350dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />

        <ImageView
            android:id="@+id/MonaLiza"
            android:layout_width="35dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="185dp"
            android:background="@drawable/mona_liza" />

        <ImageView
            android:id="@+id/table"
            android:layout_width="35dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/table" />

        <ImageView
            android:id="@+id/table2"
            android:layout_width="35dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/table"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/hatchSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="125dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/hatch" />

        <TextView
            android:id="@+id/message"
            style="@style/MyMessageStyle"
            android:textAlignment="center" />

    </RelativeLayout>

</FrameLayout>
